  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_q-app-dashboard.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.q-app-dashboard" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.q-app-dashboard" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.q-app-dashboard" value="${basedir}/out/artifacts/q_app_dashboard.war"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.q-app-dashboard.war" value="${artifacts.temp.dir}/q-app-dashboard.war"/>
  </target>
  
  <target name="artifact.q-app-dashboard" depends="init.artifacts, compile.module.q-app-dashboard" description="Build &#39;q-app-dashboard&#39; artifact">
    <property name="artifact.temp.output.q-app-dashboard" value="${artifacts.temp.dir}/q_app_dashboard"/>
    <mkdir dir="${artifact.temp.output.q-app-dashboard}"/>
    <zip destfile="${temp.jar.path.q-app-dashboard.war}">
      <zipfileset dir="${basedir}/web"/>
      <zipfileset file="${basedir}/web/WEB-INF/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${q-app-dashboard.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/omnifaces-2.3.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/jackson-annotations-2.8.5.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/primefaces-6.2.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/aws-java-sdk-s3-1.11.482.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/httpcore-4.4.10.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/aws-java-sdk-core-1.11.482.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/httpclient-4.5.6.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/lib/joda-time-2.8.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/web/WEB-INF/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </zip>
    <copy file="${temp.jar.path.q-app-dashboard.war}" tofile="${artifact.temp.output.q-app-dashboard}/q-app-dashboard.war"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.q-app-dashboard" description="Build all artifacts">
    <mkdir dir="${artifact.output.q-app-dashboard}"/>
    <copy todir="${artifact.output.q-app-dashboard}">
      <fileset dir="${artifact.temp.output.q-app-dashboard}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>